<div id="<%= dom_id(menu)%>">
  <h1 class="menu_name"><%= menu.name %></h1>
  <% if user_signed_in? && (current_user == @user) %>
    <%= link_to "Edit", edit_user_menu_path(@user, menu) %>
    |
    <%= link_to "Delete", user_menu_path(@user, menu), method: :delete, remote: true, data: {confirm: "Are you sure?"}  %>
  <% end %>


  <div class="well">
    <div class="row">
      <% menu.dishes.each do |dish| %>
        <div class="col-md-6">
          <% if dish.id.to_i%2 == 0 %>
            <% if user_signed_in? && (current_user == @user) %>
              <h1 class="dish_name"><%= link_to dish.name, menu_dish_path(menu, dish) %></h1>
            <% else %>
              <h1 class="dish_name"><%= dish.name %></h1>
            <% end %>
            <%= dish.description unless !dish.description %>
            <%= dish.price %>
          <% end %>
        </div>

        <div class="col-md-6">
          <% if dish.id.to_i%2 == 1 %>
            <% if user_signed_in? && (current_user == @user) %>
              <h1 class="dish_name"><%= link_to dish.name, menu_dish_path(menu, dish) %></h1>
            <% else %>
              <h1 class="dish_name"><%= dish.name %></h1>
            <% end %>
            <%= dish.description unless !dish.description %>
            <%= dish.price %>
          <% end %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>