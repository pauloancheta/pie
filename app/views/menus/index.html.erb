<h1>Menus</h1>

<% if current_user.is_admin %>
  <a class="addMenu">New Menu</a><br><br>
    <div class="menuForm" style="display: none;">
      <%= render '/menus/new' %>
    </div>
<% end %>

  <% @menus.each do |menu| %> 
    <h3><%= link_to menu.name, menu_path(menu) %></h3>
    <% if current_user.is_admin %>
      <%= link_to "Edit", edit_menu_path(menu) %>
      |
      <%= link_to "Delete", menu_path(menu), method: :delete, data: {confirm: "Are you sure?"} %><hr>
    <% end %>
  <% end %>
