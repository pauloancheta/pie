<h4><%= @dish.name %></h4>
<p><%= @dish.description %></p>
<p><%= @dish.price %></p>


<!-- Should only be shown to restaurant owner -->
<a id="addRecipe">Add Recipe</a>
<div id="recipeForm" style="display:none;">
  <%= render '/recipes/new' %>
</div>


<br>
<% if @recipes != nil %>
  <% @recipes.each do |r| %>
    <%= link_to r.name, dish_recipe_path(@dish, r) %> <br>
  <% end %>
<% end %>