<h1>Recipes</h1>

<!-- Renders Recipe form -->
<a class="addRecipe">Add a recipe</a>

<div class="recipeForm" style="display: none;">
  <%= render "form" %>
</div>
<hr>

<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#line" aria-controls="line" role="tab" data-toggle="tab">Line</a>
    </li>
    <li role="presentation">
      <a href="#spices" aria-controls="spices" role="tab" data-toggle="tab">Spices</a>
    </li>
    <li role="presentation">
      <a href="#vinaigrette" aria-controls="vinaigrette" role="tab" data-toggle="tab">Vinaigrette</a>
    </li>
    <li role="presentation">
      <a href="#sauce" aria-controls="sauce" role="tab" data-toggle="tab">Sauce</a>
    </li>
    <li role="presentation">
      <a href="#stew" aria-controls="stew" role="tab" data-toggle="tab">Stew</a>
    </li>
    <li role="presentation">
      <a href="#other" aria-controls="other" role="tab" data-toggle="tab">Other</a>
    </li>
    <li role="presentation">
      <a href="#all" aria-controls="other" role="tab" data-toggle="tab">All</a>
    </li>
</ul>

<!-- Recipe Accordion begins -->
<div class="tab-content panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div role="tabpanel" class="tab-pane active" id="line">
    <% @line.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="spices">
    <% @dry.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="vinaigrette">
    <% @wet.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="sauce">
    <% @sauce.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="stew">
    <% @stew.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="other">
    <% @other.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
    <% @none.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="all">
    <%= form_tag restaurants_path, :method => 'get' do %>
      <p class="search-box">
        <%= text_field_tag :search_recipes, params[:search]  %>
      </p>
    <% end %>

    <% @recipes.each_with_index do |r, index| %>
      <%= render partial: 'recipes/row', locals: {r: r, index: index} %>
    <% end %>
  </div>

</div>

