<%= simple_form_for @user do |f| %>
  <%= f.input :is_admin, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.input :name, placeholder: "Name", label: false %>
  <%= f.input :address, placeholder: "Address", label: false %>
  <%= f.input :phone_number, placeholder: "Phone Number", label: false %>
  <%= f.input :email, placeholder: "Email", label: false %>
  <%= f.input :password, placeholder: "Password", label: false %>
  <%= f.input :password_confirmation, placeholder: "Confirm Password", label: false %>
  <%= f.button :submit %>
<% end %> 
<%= link_to "Delete Account", user_path(@user), method: :delete, class: 'btn btn-link' %>