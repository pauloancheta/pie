<%= simple_form_for @user do |f| %>
  <%= f.input :is_admin, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit %>
<% end %>
