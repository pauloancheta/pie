<!DOCTYPE html>
<html>
<head>
  <title>Pie</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container container-fluid">

<ul class="nav nav-tabs">
  <li class="presentation"><%= link_to "Home", root_path %> </li>
    
    <% if current_user %>
      <!-- Signed in as <%#= current_user.name %> -->
      <li class="presentation"><%= link_to "Logout", '/logout' %></li>
    <% else %>
      <li class="presentation"><%= link_to 'Login', '/login' %></li>
      <li class="presentation"><%= link_to 'Signup', '/signup' %></li>
    <% end %>

    
</ul>

  <div class="container">
    <%= yield %>
  </div>


</body>
</html>
